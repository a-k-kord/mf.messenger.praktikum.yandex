        "stylelint-config-sass-guidelines": "^8.0.0",
        "stylelint-config-standard": "^22.0.0",
        "sugarss": "^2.0.0",
        "ts-loader": "^9.2.3",
        "ts-node": "^9.1.1",
        "tsconfig-paths-webpack-plugin": "^3.5.1",
        "typescript": "^4.1.3",
        "webpack": "^5.46.0",
        "webpack-cli": "^4.7.2",
        "webpack-merge": "^5.8.0"
